<Window x:Class="Messenger.ListOfHostPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messenger"
        mc:Ignorable="d"
        Title="ListOfHostPage" Height="450" Width="320">
    <Grid>
        <ListView Name="listOfCommunicateIP" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="36,96,42,96" SelectionChanged="listOfCommunicateIP_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn>IP</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Name="lblTitle" Content="Label" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" Height="43" Width="249"/>
        <Button Content="Back&#xD;&#xA;" HorizontalAlignment="Left" Margin="107,374,0,0" VerticalAlignment="Top" Height="30" Width="86" Click="Button_Click"/>
    </Grid>
</Window>